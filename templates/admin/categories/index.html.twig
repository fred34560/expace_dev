{% extends 'admin/base.html.twig' %}

{% block title %}Gérer les catégorie{% endblock %}

{% block body %}

    <div class="app-main__inner">
        <div class="app-page-title">
            <div class="page-title-wrapper">
                <div class="page-title-heading">
                    <div>Gestion des catégories
                        <div class="page-title-subheading">Vous pouvez ici gérer vos catégories en toute tranquillité !</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tabs-animation">
            <div class="card mb-3">
                <div class="card-header-tab card-header">
                    <div class="card-header-title font-size-lg text-capitalize font-weight-normal">
                        <i class="header-icon fas fa-th-list mr-3 text-muted opacity-6"></i>
                        Liste des catégories
                    </div>
                    <div class="btn-actions-pane-right">
                        <a href="{{path('admin_categories_new')}}" class="btn btn-info">Créer une nouvelle catégorie</a>
                    </div>
                </div>

                <div class="card-body">
                    {% include "partials/flash.html.twig" %}
                    <table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered">
                        <thead>
                            <tr>
                                <th width="90%">Nom</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for category in categories %}
                            <tr>
                                <td>{{ category.nom }}</td>
                                <td class="text-center">
                                    <a href="{{ path('admin_categories_edit', {'id': category.id}) }}"><i class="icon text-info fas fa-pen pr-3"></i></a>
                                    <a class="btn-remove" href="{{ path('admin_categories_delete', {'id': category.id}) }}"><i class="icon text-danger fas fa-trash"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>


        </div>
    </div>







{% endblock %}

{% block javascripts %}
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="/js/lib/vdialog.js"></script>
<script>
$(document).ready(() => {
    $(".btn-remove").click(function (event) {
        event.preventDefault();
        url = $(this).attr('href');
            
        vdialog.confirm('Etes vous sur de vouloir supprimer cette catégorie ?', function(){
            document.location.href = url;

        });
    });
});

</script>

{% endblock %}


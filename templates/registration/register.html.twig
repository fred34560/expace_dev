{% extends 'registration/base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    {{ form_start(registrationForm) }}
        <div class="form-row">
        <div class="col-6">{{ form_row(registrationForm.email) }}</div>
        <div class="col-6">{{ form_row(registrationForm.telephone) }}</div>
        <div class="col-6">{{ form_row(registrationForm.plainPassword.first) }}</div>
        <div class="col-6">{{ form_row(registrationForm.plainPassword.second) }}</div>
        </div>
        <div class="mt-4 d-flex align-items-center">
            <a href="{{ path('app_login') }}" class="text-primary">Vous avez déjà un compte?</a>
            <div class="ml-auto">
                <button type="submit" class="btn-wide btn-pill btn-shadow btn-hover-shine btn btn-primary btn-lg">Inscription</button>
            </div>
        </div>
    {{ form_end(registrationForm) }}
{% endblock %}

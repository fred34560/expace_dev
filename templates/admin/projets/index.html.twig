{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des projets{% endblock %}

{% block body %}
    <div class="app-main__inner">
        <div class="app-page-title">
            <div class="page-title-wrapper">
                <div class="page-title-heading">
                    <div>Gestion des projets
                        <div class="page-title-subheading">Vous pouvez ici gérer vos projets en toute tranquillité !</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tabs-animation">
            <div class="card mb-3">
                <div class="card-header-tab card-header">
                    <div class="card-header-title font-size-lg text-capitalize font-weight-normal">
                        <i class="header-icon fas fa-project-diagram mr-3 text-muted opacity-6"></i>
                        Liste des projets
                    </div>
                    <div class="btn-actions-pane-right">
                        <a href="{{ path('admin_projets_new') }}" class="btn btn-info">Créer un nouveau projet</a>
                    </div>
                </div>

                <div class="card-body">
                    {% include "partials/flash.html.twig" %}
                    <table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Titre</th>
                                <th>Client</th>
                                <th>Statut</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for projet in projets %}
                            <tr>
                                <td>{{ projet.titre }}</td>
                                <td>{{ projet.client.pseudo }}</td>
                                <td class="text-center">
                                    {% if projet.statut == 'ouverture' %}
                                    <div class="badge badge-warning" style="min-width:110px">Ouverture</div>
                                    {% elseif projet.statut == 'terminé' %}
                                    <div class="badge badge-success" style="min-width:110px">Production</div>
                                    {% else %}
                                        <div class="badge badge-danger" style="min-width:110px">Developpement</div>    
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    <a data-toggle="tooltip" data-placement="top" title="" data-original-title="Editer le projet" href="{{ path('admin_projets_edit', {'id': projet.id}) }}"><i class="icon text-info fas fa-pen pr-3"></i></a>
                                    <a data-toggle="tooltip" data-placement="top" title="" data-original-title="Supprimer le projet" class="btn-remove" href="{{ path('admin_projets_delete', {'id': projet.id}) }}"><i class="icon text-danger fas fa-trash"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>

                    </table>
                </div>
            </div>


        </div>
    </div>






{% endblock %}

{% block javascripts %}
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="/js/lib/vdialog.js"></script>
<script>
$(document).ready(() => {
    $(".btn-remove").click(function (event) {
        event.preventDefault();
        url = $(this).attr('href');
            
        vdialog.confirm('Etes vous sur de vouloir supprimer ce projet ?', function(){
            document.location.href = url;

        });
    });
});

</script>

{% endblock %}


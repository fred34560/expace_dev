{% extends 'client/base.html.twig' %}

{% block title %}Hello MessagerieController!{% endblock %}

{% block body %}

        <div class="app-inner-layout">
            <div class="app-inner-layout__wrapper">
                <div class="app-inner-layout__content card">
                    <div>
                        <div class="app-inner-layout__top-pane">
                            <div class="pane-left">
                                <div class="mobile-app-menu-btn">
                                    <button type="button" class="hamburger hamburger--elastic">
                                        <span class="hamburger-box">
                                            <span class="hamburger-inner"></span>
                                        </span>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="bg-white">
                            <div class="table-responsive">
                                <table class="text-nowrap table-lg mb-0 table table-hover">
                                    <tbody>
                                        {% for message in messages %}
                                            <tr class="pointer" onclick="document.location='lien.html'">
                                                <td>
                                                    <div class="widget-content p-0">
                                                        <div class="widget-content-wrapper">
                                                            <div class="widget-content-left mr-3">
                                                                <img width="42" class="rounded-circle" src="{{ message.expediteur.avatar }}" alt="">
                                                            </div>
                                                            <div class="widget-content-left">
                                                                <div class="widget-heading">{{ message.expediteur.nom }} {{ message.expediteur.prenom }}</div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="text-left">{{ message.titre }}</td>
                                                <td class="text-left">
                                                    <i class="fa fa-calendar-alt opacity-4 mr-2"></i>
                                                    {{ message.createdAt|date('d') }} {{ message.createdAt|date('F')|trans }}
                                                </td>
                                            </tr>
    
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                            <div class="app-inner-layout__bottom-pane d-block text-center">
                                {{ knp_pagination_render(messages) }}
                            </div>
                        </div>
                    </div>
                </div>
                {% include "partials/navigation_messages.html.twig" %}
            </div>
        </div>
{% endblock %}

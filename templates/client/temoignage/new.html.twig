{% extends 'client/base.html.twig' %}

{% block title %}Votre témoignage{% endblock %}

{% block body %}

    <div class="app-main__inner">
        <div class="app-page-title">
            <div class="page-title-wrapper">
                <div class="page-title-heading">
                    <div>Votre témoignage
                        <div class="page-title-subheading">Vous pouvez sur cette page créer un nouveau témoignage</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tabs-animation">
            <div class="card mb-3">
                <div class="card-header-tab card-header">
                    <div class="card-header-title font-size-lg text-capitalize font-weight-normal">
                        <i class="header-icon fas fa-project-diagram mr-3 text-muted opacity-6"></i>
                        Enregistrer un témoignage
                    </div>
                    
                </div>
                <div class="card-body">
                    {{ include('client/temoignage/_form.html.twig', {'button_label': 'Enregistrer votre témoignage'}) }}
                </div>
                
            </div>
            


        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script>
        $(function() {
            $('.range').next().text('--'); // Valeur par défaut
            $('.range').on('temoignage_client[note]', function() {
                var $set = $(this).val();
                $(this).next().text($set);
            });
        });
    </script>
{% endblock %}

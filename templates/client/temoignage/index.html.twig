{% extends 'client/base.html.twig' %}

{% block title %}Vos témoignages{% endblock %}

{% block body %}


<div class="app-main__inner">
        <div class="app-page-title">
            <div class="page-title-wrapper">
                <div class="page-title-heading">
                    <div>Gestion des témoignages
                        <div class="page-title-subheading">Vous pouvez ici gérer vos contributions !</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tabs-animation">
            <div class="card mb-3">
                <div class="card-header-tab card-header">
                    <div class="card-header-title font-size-lg text-capitalize font-weight-normal">
                        <i class="header-icon fas fa-project-diagram mr-3 text-muted opacity-6"></i>
                        Liste de vos témoignages
                    </div>
                    <div class="btn-actions-pane-right">
                        <a href="{{ path('temoignage_client_new') }}" class="btn btn-info">Créer un nouveau témoignage</a>
                    </div>
                </div>

                <div class="card-body">
                    {% include "partials/flash.html.twig" %}
                    <table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Message</th>
                                <th>Créé le</th>
                                <th>Note</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for temoignage in temoignages %}
                            <tr>
                                <td>{{ temoignage.message }}</td>
                                <td>{{ temoignage.createdAt ? temoignage.createdAt|date('d-m-Y H:i:s') : '' }}</td>
                                <td>{{ temoignage.note }} sur 10</td>
                                <td class="text-center">
                                    <a data-toggle="tooltip" data-placement="top" title="" data-original-title="Editer le projet" href="{{ path('temoignage_client_edit', {'id': temoignage.id}) }}"><i class="icon text-info fas fa-pen pr-3"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>

                    </table>
                </div>
            </div>


        </div>
    </div>
{% endblock %}

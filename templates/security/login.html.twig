{% extends 'security/base.html.twig' %}

{% block title %}Connectez-vous{% endblock %}

{% block body %}

    <div class="mx-auto app-login-box col-sm-12 col-md-10 col-lg-9">
        <img class="pb-5" src="/images/logo-default-130x42.png" alt="">
        <h4 class="mb-0">
            <span class="d-block">Bienvenue,</span>
            <span>Connectez-vous Ã  votre compte</span>
        </h4>
        <h6 class="mt-3">Pas de compte? <a href="{{ path('app_register') }}" class="text-primary">S'inscrire maintenant</a></h6>
        <div class="divider row"></div>
        <div>
            <form method="post">
                <div class="form-row">

                    {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    
                    <div class="col-md-6">
                        <div class="position-relative form-group">
                            <label for="inputEmail" class="">Email</label>
                            <input value="{{ last_username }}" name="email" id="inputEmail" type="email" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="position-relative form-group">
                            <label for="inputPassword" class="">Mot de passe</label>
                            <input name="password" id="inputPassword" type="password" class="form-control" required>
                        </div>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                </div>
                                                
                <div class="position-relative custom-checkbox custom-control">
                    <input name="_remember_me" id="rememberMe" type="checkbox" class="custom-control-input">
                    <label class="custom-control-label" for="rememberMe" class="form-check-label">Se souvenir de moi</label>
                </div>
                <div class="divider row"></div>
                <div class="d-flex align-items-center">
                    <div class="ml-auto">
                        <a href="{{ path('app_forgot_password_request') }}" class="btn-lg btn btn-link">Mot de passe perdu ?</a>
                        <button class="btn btn-primary btn-lg">Se connecter</button>
                    </div>
                </div>
            </form>                        
        </div>
    </div>
    
{% endblock %}

{% extends 'admin/base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Créer un projet{% endblock %}

{% block body %}


<div class="app-main__inner">
        <div class="app-page-title">
            <div class="page-title-wrapper">
                <div class="page-title-heading">
                    <div>Créer un projet
                        <div class="page-title-subheading">Vous pouvez sur cette page créer un nouveau projet</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tabs-animation">
            <div class="card mb-3">
                <div class="card-header-tab card-header">
                    <div class="card-header-title font-size-lg text-capitalize font-weight-normal">
                        <i class="header-icon fas fa-project-diagram mr-3 text-muted opacity-6"></i>
                        Infos sur le projet
                    </div>
                    <div class="btn-actions-pane-right">
                        {% if projet.statut == 'ouverture' %}
                            <a href="{{ path('admin_projets_update_dev', {'id': projet.id}) }}" class="btn btn-danger">Passer en mode developpement</a>
                        {% elseif projet.statut == 'en_cours' %}
                                <a href="{{ path('admin_projets_update_prod', {'id': projet.id}) }}" class="btn btn-success">Passer en mode production</a>
                        {% elseif projet.statut == 'terminé' %}
                                <a href="{{ path('admin_projets_update_dev', {'id': projet.id}) }}" class="btn btn-danger">Passer en mode developpement</a>
                        {% endif %}
                        
                    </div>
                    
                </div>
                <div class="card-body">
                    {{ include('admin/projets/_form.html.twig', {'button_label': 'Modifier le projet'}) }}
                </div>
                
                
            </div>
            


        </div>
    </div>



{% endblock %}

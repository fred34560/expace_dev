{% extends 'client/base.html.twig' %}

{% block title %}Mes devis{% endblock %}

{% block body %}
<div class="app-main__inner">
        <div class="app-page-title">
            <div class="page-title-wrapper">
                <div class="page-title-heading">
                    <div>Mes devis
                        <div class="page-title-subheading">Vous pouvez ici gérer vos devis !</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tabs-animation">
            <div class="card mb-3">
                <div class="card-header-tab card-header">
                    <div class="card-header-title font-size-lg text-capitalize font-weight-normal">
                        <i class="header-icon fas fa-project-diagram mr-3 text-muted opacity-6"></i>
                        Liste des devis
                    </div>
                </div>

                <div class="card-body">
                    {% include "partials/flash.html.twig" %}
                    <table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Projet</th>
                                <th>Créé le</th>
                                <th>Statut</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for devi in devis %}
                            <tr>
                                <td>{{ devi.projet }}</td>
                                <td>{{ devi.createdAt|date('d-m-Y') }}</td>
                                <td>
                                    {% if devi.statut == 'en_attente' %}
                                        Devis non signé
                                    {% else  %}
                                        Devis accepté et signé
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    <a target="blank_" data-toggle="tooltip" data-placement="top" title="" data-original-title="Voir le devis" href="{{ path('client_devis_view', {'id': devi.id}) }}"><i class="icon text-info fas fa-eye pr-3"></i></a>
                                    <a data-toggle="tooltip" data-placement="top" title="" data-original-title="Signer le devis" class="btn-remove" href="{{ path('client_projets_delete', {'id': devi.id}) }}"><i class="icon text-success fas fa-file-signature"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>

                    </table>
                </div>
            </div>


        </div>
    </div>
{% endblock %}
